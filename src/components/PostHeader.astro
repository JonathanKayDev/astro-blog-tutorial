---
// library import
import { Image } from 'astro:assets';

// utils imports
import {slugify, formatDate} from '../js/utils';

const { title, date, category, author, image} = Astro.props;

---


<header>
    <div class="container">
        <small>
            <a href={`/category/${slugify(category)}/`} class="badge" transition:name=`category-${title}`>{category}</a>
        </small>
        <h1 class="h2" transition:name=`title-${title}`>{title}</h1>
        <p>by <a href={`/author/${slugify(author)}/`}>{author}</a>
        â€¢ {formatDate(date)}</p>
    </div>
    <Image src={image.src} alt={image.alt} width={1200} height={600} class='hero-image' transition:name=`img-${title}`/>
</header>